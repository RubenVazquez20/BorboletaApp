<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background ="#ffffff">

    <!-- Edificios img-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="415dp"
            android:layout_height="240dp"
            android:contentDescription="@string/all"
            android:paddingTop="0dp"
            app:srcCompat="@drawable/edificios"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <!-- Logo Mariposa de Borboleta-->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:contentDescription="@string/all"
            app:srcCompat="@drawable/signinimg"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/nameRegistration"
            android:layout_width="250dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:autofillHints="@string/nameRegistration"

            android:background="@drawable/ic_field"
            android:elevation="6dp"
            android:ems="10"
            android:hint="@string/nameRegistration"
            android:inputType="textEmailAddress"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/lastNameFRegistration"
            android:layout_width="250dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:autofillHints="@string/lastNameFRegistration"

            android:background="@drawable/ic_field"
            android:elevation="6dp"
            android:ems="10"
            android:hint="@string/lastNameFRegistration"
            android:inputType="textEmailAddress"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/lastNameMRegistration"
            android:layout_width="250dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="24dp"
            android:autofillHints="@string/lastNameMRegistration"

            android:background="@drawable/ic_field"
            android:drawablePadding="16dp"
            android:elevation="6dp"
            android:ems="10"
            android:hint="@string/lastNameMRegistration"
            android:inputType="textEmailAddress"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/style_spinner"
            android:elevation="6dp"
            android:scrollbars="vertical"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-12dp"
            tools:layout_editor_absoluteY="653dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/style_spinner"
            android:elevation="6dp"
            android:scrollbars="vertical"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-12dp"
            tools:layout_editor_absoluteY="653dp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/style_spinner"
            android:elevation="6dp"
            android:scrollbars="vertical"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-12dp"
            tools:layout_editor_absoluteY="653dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutButtonsLow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutButtonsLoadImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/linearLayouts"
        app:layout_constraintTop_toBottomOf="@+id/linearLayouts"
        app:layout_constraintVertical_bias="0.085"
        tools:ignore="UnknownId">

        <Spinner
            android:id="@+id/gender"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/style_spinner"
            android:elevation="6dp"
            android:scrollbars="vertical"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-12dp"
            tools:layout_editor_absoluteY="653dp" />

        <Spinner
            android:id="@+id/pronoun"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/style_spinner"
            android:elevation="6dp"
            android:scrollbars="vertical"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-12dp"
            tools:layout_editor_absoluteY="653dp" />
