<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurationActivity"
    android:background="@color/white">

    <!-- Edificios img-->
    <LinearLayout
        android:id="@+id/edificios_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="415dp"
            android:layout_height="240dp"
            android:contentDescription="@string/all"
            android:paddingTop="0dp"
            app:srcCompat="@drawable/edificios"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <!-- ImÃ¡gen de perfil del usuario-->
    <LinearLayout
        android:id="@+id/user_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:contentDescription="@string/all"
            app:srcCompat="@drawable/signinimg"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <!-- User info -->

    <LinearLayout
        android:id="@+id/content_user_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_image"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/name_user_data"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:background="@drawable/ic_field"
            android:elevation="6dp"
            android:ems="10"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lastName_user_data"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:background="@drawable/ic_field"
            android:elevation="6dp"
            android:ems="10"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lastNameM_user_data"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ic_field"
            android:drawablePadding="16dp"
            android:elevation="6dp"
            android:ems="10"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />

        <!-- User info -->
        <LinearLayout
            android:id="@+id/content_date_user_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/DD_user_data"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_field"
                android:elevation="6dp"
                android:scrollbars="vertical"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:textColorHint="#0C2049"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="-12dp"
                tools:layout_editor_absoluteY="653dp" />

            <TextView
                android:id="@+id/MM_user_data"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_field"
                android:elevation="6dp"
                android:scrollbars="vertical"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="-12dp"
                tools:layout_editor_absoluteY="653dp" />

            <TextView
                android:id="@+id/spinner3"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_field"
                android:elevation="6dp"
                android:scrollbars="vertical"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="-12dp"
                tools:layout_editor_absoluteY="653dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/gender_user_data"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ic_field"
            android:drawablePadding="16dp"
            android:elevation="6dp"
            android:ems="10"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/pronoun_user_data"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ic_field"
            android:drawablePadding="16dp"
            android:elevation="6dp"
            android:ems="10"
            android:minHeight="44dp"
            android:padding="12dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:textColor="#000000"
            android:textColorHint="#0C2049"
            android:textSize="12sp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_user_data"
        app:layout_constraintVertical_bias="0.666">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterButon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/ic_buttom"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:text="@string/register"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>